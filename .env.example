# Telegram Bot (public, used client-side for contact form)
NEXT_PUBLIC_TG_BOT_TOKEN=your_telegram_bot_token
NEXT_PUBLIC_TG_CHAT_ID=your_telegram_chat_id

# Google Gemini API (blog post generation)
GOOGLE_API_KEY=your_google_api_key

# MongoDB Atlas connection string (include database name)
# Production: mongodb+srv://user:pass@cluster.mongodb.net/softwhere
# Dev:        mongodb+srv://user:pass@cluster.mongodb.net/softwhere-dev
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/softwhere

# Secret for authenticating blog generation API
API_SECRET=your_api_secret

# Public-facing site URL (no trailing slash for BASE_URL)
WEBSITE_URL=https://softwhere.uz/
NEXT_PUBLIC_BASE_URL=https://softwhere.uz

# Node environment
NODE_ENV=development
